{
  "name": "johannbierman",
  "version": "1.0.0",
  "description": "Johann Bierman's portfolio website",
  "main": "index.html",
  "scripts": {
    "build:css": "yarn tailwindcss -i src/tailwind.css -o dist/styles.css --minify",
    "build:ts": "tsc",
    "build:copy": "cpx 'src/**/*.{html,ico,jpg,png,svg}' dist/",
    "build": "yarn clean:dist && yarn build:css && yarn build:ts && yarn build:copy",
    "clean:dist": "rm -rf dist",
    "clean": "yarn clean:dist && rm -rf node_modules",
    "docker:build": "yarn build && docker build -t my-static-site .",
    "docker:run": "docker run -d -p 80:80 --name static-site my-static-site",
    "docker:stop": "docker stop static-site",
    "docker:remove": "docker rm static-site && docker rmi my-static-site",
    "start": "yarn docker:build && yarn docker:run",
    "stop": "yarn docker:stop && yarn docker:remove"
  },
  "author": "Johann Bierman",
  "license": "MIT",
  "devDependencies": {
    "cpx": "^1.5.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2"
  }
}
